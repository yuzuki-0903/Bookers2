 <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= render 'users/info', user: @user, book: @book %>

    <div class="col-sm-9">
    <h1>Book detali</h1>
    <table class="table table-striped">
    <tr>
    <th><%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag @user ,:profile_image,  fallback: "no_image.jpg", :width => "50px",:height =>"50px" %><br>
        <%=@books.user.name %>
        <% end %>
    </th>
    <th> <%= @books.title %></th>
    <th> <%= @books.body %></th>
     <% if @user.id == current_user.id %>
       <th><%= link_to "edit",edit_book_path(@books.id),class:"btn-lg" %></th>
       <th><%= link_to "destory",book_path(@books.id),method: :delete %></th>
    <% end %>
    </tr>
</table>
</div>
