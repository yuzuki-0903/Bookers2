

 <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
 <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Update Book',class:"btn btn-info col-xs-10 col-xs-offset-1" %>
    <%= link_to "show",book_path(@book) %>
    <%= link_to"back",books_path %>
<% end %>