 <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= render 'users/info', user: @user, book: @book %>

<div class="col-sm-9">
    <h1>Books</h1>
    <table class="table table-striped">
    	<tr>
	    <th></th>
	    <th>Title</th>
	    <th>Opinion</th>
	  </tr>

    <% @user.books.each do |book| %>
    <tr>
    <th><%= link_to user_path(book.user.id) do %>
        <%= attachment_image_tag @user ,:profile_image,  fallback: "no_image.jpg", :width => "50px",:height =>"50px" %><br>
        <%= @user.name %>
        <% end %>
    </th>
    <th><%= link_to book.title,book_path(book.id) %></th>
    <th> <%= book.body %></th>
    </tr>
<% end %>
</table>
</div>

